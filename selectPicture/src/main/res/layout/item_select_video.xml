<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.caijia.selectpicture.widget.SquareImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/image_view"
        android:layout_alignParentTop="true"
        android:background="@color/color_ms_shadow_normal" />

    <TextView
        android:id="@+id/video_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:drawablePadding="6dp"
        android:text="05:20"
        android:layout_alignBottom="@+id/image_view"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="6dp"
        android:drawableLeft="@drawable/ic_sm_camera_video"/>

    <TextView
        android:id="@+id/select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/ic_sm_checkbox"
        android:padding="8dp"
        android:visibility="gone" />

</RelativeLayout>