<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="8dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_sm_pic_group_bg">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_gravity="bottom|right"
            android:background="#dddddd" />

        <ImageView
            android:id="@+id/video_bg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="2dp"
            android:visibility="gone"
            android:background="@drawable/ic_sm_video_bg"
            android:src="@drawable/ic_sm_video"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="图片"
            android:textColor="#222222"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/picture_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:text="1张"
            android:textColor="#999999"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_sm_radio"/>
</LinearLayout>